<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        xmlns:vms="clr-namespace:WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Button Content="Assignment related tasks" Click="btn_assignment_Click" Margin="10,10,10,10"></Button>
            <Button Content="Employee related tasks" Click="btn_employee_Click" Margin="10,10,10,10"></Button>
            <Button x:Name="btn_manager" Click="btn_manager_Click"  Content="Manager related tasks" Margin="10,10,10,10"></Button>
        </StackPanel>
    </Grid>
    
</Window>
